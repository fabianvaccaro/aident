<Window x:Class="AiGumsPC.verCiclosEvaluacion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ciclos de Evaluación" Height="300" Width="300">
    <Grid HorizontalAlignment="Left" Height="252" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
        <Button Content="Cerrar" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="salir"/>
        <DataGrid x:Name="grid_CiclosEvaluacion" HorizontalAlignment="Left" VerticalAlignment="Top" Height="206" Width="280" Margin="0,36,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Header="Id"/>
                <DataGridTextColumn Binding="{Binding idMpat}" Header="Id MPAT"/>
                <DataGridTextColumn Binding="{Binding numeroCiclos}" Header="Numero de Ciclos"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
